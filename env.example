# .env.example (백엔드)
# LLM Provider 설정
GEMINI_API_KEY=__REDACTED__
LSC_API_KEY=dev-key-123
LLM_PROVIDER=gemini

# API 설정
CORS_ORIGINS=http://localhost:3000
HOST=0.0.0.0
PORT=8000
DEBUG=true

# 데이터베이스 설정
CHROMA_DIR=data/chroma
SEEN_DB=data/crawler_storage.db
EMBEDDING_CACHE_DB=data/embedding_cache.db

# Redis 설정 (선택사항)
REDIS_URL=redis://localhost:6379

# 임베딩 모델 설정
EMBED_MODEL=jhgan/ko-sroberta-multitask
EMBED_BATCH_SIZE=32

# 리랭커 설정
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
TOPK_FIRST=20
TOPK_FINAL=6
ENABLE_RERANK=true

# 검색 설정
RETRIEVAL_K=8
RETRIEVAL_ALPHA=0.2

# 생성 품질 가드 설정
GEN_MIN_CHARS=1600
GEN_MAX_CHARS=1900
GEN_MIN_SUBHEADINGS=3
GEN_REQUIRE_CHECKLIST=true
GEN_REQUIRE_DISCLAIMER=true
GEN_MAX_RETRIES=2

# 크롤링 설정
MAX_PAGES_PER_CRAWL=10
CRAWL_DELAY_MIN=1
CRAWL_DELAY_MAX=3

# 업로드 설정 (선택사항)
UPLOAD_ENABLED=false
NAVER_BLOG_ID=your_blog_id
NAVER_BLOG_PASSWORD=your_password

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# 모니터링 설정
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
